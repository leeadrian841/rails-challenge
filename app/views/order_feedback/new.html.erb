<div class="container">
  <div class="col-md-8 col-md-offset-2 main">
    <h1>Feedback for Order <%= @order.id %></h1>
    <%= form_for :order_feedback, url: order_feedback_index_path do |f| %>
    <div>
      <div class="form-group">
        <h4><strong>Samsui Chicken Rice (Very Poor = 1, Excellent = 5):</strong></h4>
        <%= f.select(:item101_rating, options_for_select([['Very Poor', 1], ['Poor', 2], ['Average', 3], ['Good', 4], ['Excellent', 5]]), {}, {:class => "form-control"}) %>
      </div>
      <div class="form-group">
        <h4><strong>Grilled Farm Fresh Chicken (Very Poor = 1, Excellent = 5):</strong></h4>
        <%= f.select(:item121_rating, options_for_select([['Very Poor', 1], ['Poor', 2], ['Average', 3], ['Good', 4], ['Excellent', 5]]), {}, {:class => "form-control"}) %>
      </div>
    <div class="form-group">
      <h4><strong>Delivery Rating (Very Poor = 1, Excellent = 5):</strong></h4>
      <%= f.select(:delivery_rating, options_for_select([['Very Poor', 1], ['Poor', 2], ['Average', 3], ['Good', 4], ['Excellent', 5]]), {}, {:class => "form-control"}) %>
    </div>
    <div class="form-group">
      <h4><strong>Any comments/suggestions (optional):</strong></h4>
      <%= f.text_area :comment, class: "form-control", rows: "4" %>
    </div>
    <%= f.submit "SEND", class: "btn btn-success btn-lg" %>
  </div>
  <% end %>
  </div>
</div>
