<div class="container">
  <div class="col-md-8 col-md-offset-2 index">
    <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
    <% end %>
    <% if alert %>
    <div class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
    <% end %>
  </div>
</div>
